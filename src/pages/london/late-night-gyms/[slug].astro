---
import { PLACES } from "../../../data/places";

export function getStaticPaths() {
  return PLACES.map((p) => ({ params: { slug: p.slug }, props: { place: p } }));
}

const { place } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{place.name} — Late-Night Gym (London)</title>
    <meta
      name="description"
      content={`Opening hours and practical info for ${place.name} in London.`}
    />
    <style>
      body {
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto,
          Helvetica, Arial;
        margin: 0;
        color: #111;
      }
      a { color: inherit; }
      .wrap { max-width: 960px; margin: 0 auto; padding: 24px; }
      .box { border: 1px solid #eee; padding: 14px; margin-bottom: 14px; }
      .muted { color: #555; }
    </style>
  </head>
  <body>
    <main class="wrap">
      <p style="margin:0 0 10px;">
        <a href="/london/late-night-gyms" style="text-decoration:underline;">← Back</a>
      </p>

      <h1 style="font-size:30px; margin:0 0 6px;">{place.name}</h1>
      <p class="muted" style="margin:0 0 14px;">
        {place.area} • {place.address}{place.nearestTube ? ` • Near ${place.nearestTube}` : ""}
      </p>

      <div class="box">
        <div><strong>Hours:</strong> {place.hoursNote}</div>
        <div><strong>Late-night friendly:</strong> {place.lateNightFriendly ? "Yes" : "No"}</div>
        {place.website ? (
          <div><strong>Website:</strong> <a href={place.website}>{place.website}</a></div>
        ) : null}
        <div><strong>Last updated:</strong> {place.updatedAt}</div>
      </div>

      <p style="margin:0 0 14px;">{place.blurb}</p>

      <section style="margin-bottom:16px;">
        <h2 style="font-size:18px; margin:0 0 8px;">Amenities</h2>
        <ul>
          {place.amenities.map((a) => (
            <li>{a}</li>
          ))}
        </ul>
      </section>

      <p class="muted" style="margin-top:16px; font-size:14px;">
        Note: Opening hours can change. Always confirm on the gym’s official site.
      </p>
    </main>
  </body>
</html>
